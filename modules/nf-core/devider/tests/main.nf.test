nextflow_process {

    name "Test Process DEVIDER"
    script "../main.nf"
    process "DEVIDER"

    tag "modules"
    tag "modules_nfcore"
    tag "devider"

    test("sarscov2 - fastq") {

        // @krannich479: The SRA sample SRR16311688 is an individual
        // co-infected with SARS-CoV-2 (SC2) Beta and Delta variants
        // of concern. The data is ONT LR sequencing data.
        setup {
            run("SRATOOLS_PREFETCH") {
                script "../../sratools/prefetch/main.nf"
                process {
                    """
                    input[0] = [ [ id: 'test_sample' ], 'SRR16311688' ]
                    input[1] = []  // ncbi_settings (empty)
                    input[2] = []  // certificate (empty)
                    """
                }
            }
            
            run("SRATOOLS_FASTERQDUMP") {
                script "../../sratools/fasterqdump/main.nf"
                process {
                    """
                    input[0] = SRATOOLS_PREFETCH.out.sra
                    input[1] = []  // ncbi_settings (empty)
                    input[2] = []  // certificate (empty)
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = SRATOOLS_FASTERQDUMP.out.reads
                input[1] = [ file("https://github.com/nf-core/test-datasets/raw/viralrecon/genome/MN908947.3/GCA_009858895.3_ASM985889v3_genomic.200409.fna.gz", checkIfExists: true) ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

